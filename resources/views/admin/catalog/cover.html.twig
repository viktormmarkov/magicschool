{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block pageHeading %} {{ pageHeading }}{% endblock pageHeading %}
{% block pageHeadingDescription %} {{ pageDescription }}{% endblock pageHeadingDescription %}
{% block title %} {{ pageHeading }} -> {{ pageDescription }} {% endblock title %}
{% block breadcrumb %} {{ pageHeading|capitalize }} {{ pageDescription|lower }} {% endblock breadcrumb %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('message') %}
        <div class="flash-notice">
            <div class="callout callout-success">
                <p> {{ flashMessage }}</p>
            </div>
        </div>
    {% endfor %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr' : {'class' : 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </div>



    <div class="form-group">
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile, {'attr' : {'class' : 'form-control'}}) }}
        {{ form_errors(form.imageFile) }}
    </div>

    <div class="form-group">
        {{ form_row(form.save , {'attr': {'class': 'btn btn-default' }}) }}
    </div>

    {{ form_end(form) }}


    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">{% trans %} admin.dashboard.carousel.list {% endtrans %}</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered">
                <tbody><tr>
                    <th width="5%">#</th>
                    <th width="55%">{% trans %} admin.dashboard.carousel.title {% endtrans %}</th>
                    <th width="30%">{% trans %} admin.dashboard.carousel.img {% endtrans %}</th>
                    <th width="10%">{% trans %} form.action {% endtrans %}</th>
                </tr>
                {% for entity in data %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.title }}</td>
                    <td><img src="/assets/images/catalog/{{ entity.imageName }}" alt="{{ entity.title }}" class="img-thumbnail" width="280px" height="70px"/></td>
                    <td><a class="btn btn-primary btn-delete-item" href="{{ path('app_admin_catalog_cover_delete', {id : entity.id}) }}">{% trans %}form.delete{% endtrans %}</a></td>
                </tr>
                {% endfor %}

                </tbody></table>
        </div><!-- /.box-body -->

    </div>
{% endblock body %}
